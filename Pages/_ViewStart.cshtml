@{
    var routeUrl = ViewContext.RouteData.Values["Page"].ToString();
    var pages = new List<string> {"SelectTrain", "SelectCoach", "PurchaseTicket", "Message"};
    if (pages.Any(routeUrl.Contains) || routeUrl.Equals("/Index")) {
        Layout = "_LayoutFluid";
    }
    else {
        Layout = "_Layout";
    }
}
