            </div>
            <div class="form-group">
                <label asp-for="Coach.Type" class="control-label"></label>
                <input asp-for="Coach.Type" class="form-control" />
                <span asp-validation-for="Coach.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach.PriceTenge" class="control-label"></label>
                <input asp-for="Coach.PriceTenge" class="form-control" />
                <span asp-validation-for="Coach.PriceTenge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
